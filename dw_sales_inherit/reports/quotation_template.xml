                                <t t-set="sr_no" t-value="0"/>
                                <t t-set="total_qty" t-value="0"/>
                                <t t-set="current_subtotal" t-value="0"/>
                                <t t-set="packing_amount" t-value="0"/>
                                <t t-set="freight_amount" t-value="0"/>
                                <t t-set="ttl_qty" t-value="0"/>
                                <t t-set="lines" t-value="o.order_line"/>
                                <t t-foreach="lines" t-as="line">
                                    <t t-if="line.product_id.name == 'Packing Charges'">
                                      <t t-set="packing_amount" t-value="line.price_subtotal"/> 
                                    </t> 
                                    <t t-if="line.product_id.name == 'Freight'">
                                      <t t-set="freight_amount" t-value="line.price_subtotal"/> 
                                    </t> 
                                    <tr t-if="line.product_id.name != 'Packing Charges' and line.product_id.name != 'Freight'" style="border-bottom:1px solid;">
                                        <t t-set="sr_no" t-value="sr_no+1"/>
                                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal"/>
                                        <t t-set="ttl_qty" t-value="ttl_qty +  line.product_uom_qty"/>
                                        <td class="text-center" style="padding-top:10px;padding-bottom:10px;border-right:1px solid;"><t t-esc="sr_no"/></td>
                                        <td class="text-center" style="padding-top:10px;padding-bottom:10px;border-right:1px solid;"><t t-esc="line.product_id.name"/></td>
                                        <td class="text-center" style="padding-top:10px;padding-bottom:10px;border-right:1px solid;"><t t-esc="line.product_id.l10n_in_hsn_code"/></td>
                                        <td class="text-center" style="padding-top:10px;padding-bottom:10px;border-right:1px solid;"><span t-esc="'%.2f'% line.product_uom_qty"/></td>
                                        <td class="text-center" style="padding-top:10px;padding-bottom:10px;border-right:1px solid;"><span t-field="line.product_uom"/></td>
                                        <td class="text-center" style="padding-top:10px;padding-bottom:10px;border-right:1px solid;"><span t-field="line.price_unit"/></td>
                                        <td class="text-center o_price_total" style="padding-top:10px;padding-bottom:10px;"><span t-field="line.price_subtotal"/></td>
                                    </tr>
                                </t>
                            </tbody>
                              <tr>
                                    <td style="border-right:1px solid;padding-right:5px;border-right:none;" colspan="3" class="text-right">TOTAL :</td>
                                    <td style="padding-right:5px;" class="text-center"><t t-esc="ttl_qty"/> </td>
                                    <td colspan="3"> </td>
                                </tr>
                            </table>
                            </div>
                            <table class="w-100">
                                <tr style="border-top:1px solid;">
                                    <t t-set="total_invoice_value" t-value="o.amount_tax + current_subtotal + packing_amount + freight_amount"/> 
                                    <td colspan="4" style="border-bottom:none;padding-left:5px;"><strong>Rupees In Words  : </strong>
                                    <t t-set="total_quotation_value_words" t-value="o.number_in_words('%.2f'% total_invoice_value)"/>
                                    <t t-esc="total_quotation_value_words"/>
                                    </td>
                                    <td colspan="2" class="text-left" style="border-left:1px solid;padding-left:5px;padding-right:5px;"><strong>Gross Amount :</strong></td>
                                    <td class="text-right" style="padding-right:5px;"><strong><t t-esc="current_subtotal" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/></strong></td>
                                </tr>
                                <!-- <tr t-if="o.advance_bal">
                                    <td colspan="4" style="border-top:none;"/>
                                    <td colspan="2" class="text-left" style="border-left:1px solid;padding-left:5px;padding-right:5px;"><strong>ADVANCE AMOUNT:</strong></td>
                                    <td class="text-right" style="padding-right:5px;"><strong><t t-esc="o.advance_bal" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/></strong></td>
                                </tr> -->
                                <tr t-if="packing_amount">
                                    <td colspan="4" style="border-top:none;"/>
                                    <td colspan="2" class="text-left" style="border-left:1px solid;padding-left:5px;padding-right:5px;"><strong>PACKING :</strong></td>
                                    <td class="text-right" style="padding-right:5px;"><strong><t t-esc="packing_amount"/></strong></td>
                                </tr>
                                <tr t-if="freight_amount">
                                    <td colspan="4" style="border-top:none;"/>
                                    <td colspan="2" class="text-left" style="border-left:1px solid;padding-left:5px;padding-right:5px;"><strong>FREIGHT :</strong></td>
                                    <td class="text-right" style="padding-right:5px;"><strong><t t-esc="freight_amount"/></strong></td>
                                </tr>
                                <tr>
                                    <!-- <t t-set="total_invoice_value" t-value="current_subtotal + o.amount_tax"/> -->
                                    <td colspan="4" style="border-top:none;"/>
                                    <td colspan="2" class="text-left" style="border-left:1px solid;padding-left:5px;padding-right:5px;"><strong>Total Taxable Amount :</strong></td>
                                    <td class="text-right" style="padding-right:5px;"><strong><t t-esc="current_subtotal + packing_amount + freight_amount" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/></strong></td>
                                </tr>
                                <tr>
                                    
                                    <td colspan="4" style="border-top:none;"/>
                                    <td colspan="2" class="text-left" style="border-left:1px solid;padding-left:5px;padding-right:5px;"><strong>IGST :</strong></td>
                                    <td class="text-right" style="padding-right:5px;"><strong><t t-esc="o.amount_tax" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/></strong></td>
                                </tr>
                                <tr>
                                    <td colspan="4"/>
                                    <td colspan="2" class="text-left" style="border-left:1px solid;padding-left:5px;padding-right:5px;border-top:1px solid;border-bottom:1px solid;"><strong>Net Amount  :</strong></td>
                                    <td class="text-right" style="padding-right:5px;border-top:1px solid;border-bottom:1px solid;"><strong><t t-esc="o.amount_tax + current_subtotal + packing_amount + freight_amount" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/></strong></td>
                                </tr>
                          </table>
                            <div style="padding-left:10px;" class="row w-100">
                                <div class="col-7">
                                    <!-- <span style="padding-left:5px;"><strong>Terms Thanks &amp; Conditions :</strong></span><br/> -->
                                    <span><strong><t t-esc="o.term_and_condn"/></strong></span>
                                </div>
                                <div style="padding-left:20px;" class="col-5 text-center">
                                 <br/><br/>
                                    <t t-if="o.stamp">
                                <img t-attf-src="data:image/*;base64, {{o.stamp}} " style="height: 100px;width:100px;"/><br/><br/>
                                </t>
                                <t t-if="o.signature">
                                <img t-attf-src="data:image/*;base64, {{o.signature}} " style="height: 100px;width:100px;"/><br/>
                                </t>
                                    <br/><br/>
                                    <span><strong>For, Advance Services &amp; Parts</strong></span><br/>
                                       <br/><br/><br/>
                                </div>
                            </div>

                        </div>

                    </t>
                    </t>
                </t>
            </t>
       
      
</template>
